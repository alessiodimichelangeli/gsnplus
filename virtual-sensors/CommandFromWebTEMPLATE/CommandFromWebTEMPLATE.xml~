<!-- Please remember this is only a template, useful to learn how to write a virtual sensor for web input.  -->
<!-- For more details of how to write a Virtual Sensor for GSN, please read the official wiki at https://github.com/LSIR/gsn/wiki -->

<virtual-sensor name="CommandFromWebTEMPALTE" priority="10">

	<processing-class>
	
		<class-name>gsn.vsensor.BridgeWebInputVirtualSensor</class-name>
		
		<init-params />
		
		<!-- web input part -->
		<web-input password="INPUT">
			
			<!-- For example you want to change a value from the gsn interface.
			See the relative wrapper template to understand -->
			<command name="CHANGE_FIELD_VALUE">
				<field name="FIELD_NAME" type="FIELD_TYPE">DESCRIPTION...</field>
			</command>
	        
	        </web-input>
		<!-- end of web input part -->
		
		<output-structure>
			<field name="switcher" type="int" />
		</output-structure>
	</processing-class>
	<description>This sensor simulates the possibility to change a sensor value from the web interface.
	</description>
	<life-cycle pool-size="10" />
	<addressing>
		<predicate key="geographical">Sensor 114 @ EPFL</predicate>
		<predicate key="LATITUDE">46.520000</predicate>
		<predicate key="LONGITUDE">6.565000</predicate>
	</addressing>
	<storage history-size="5m" />
	<streams>
		<stream name="input1">
			<source alias="source1" sampling-rate="1" storage-size="1s">
				<address wrapper="CommandFromWeb">
				</address>
				<query>SELECT switcher FROM wrapper</query>
			</source>
			<query>SELECT switcher FROM source1</query>
		</stream>
	</streams>
</virtual-sensor>
